<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DasboardActivity"
    android:background="@color/app_theme"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:elevation="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="0dp"
            >

            <ImageView
                android:id="@+id/location"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/location"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:padding="2dp"
                android:contentDescription="ProfileIcon" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_address_new"
                android:layout_toEndOf="@+id/location"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/profile_user"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/add_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:text="@string/location"
                    android:textColor="#f2beaa"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/show_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="JSS Academy of Technical Education"
                    android:textColor="#d9d9d9"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/profile_user"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/profile"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="30dp"
                android:padding="2dp"
                android:contentDescription="ProfileIcon" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/banner_dashboard"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="2sp"
            android:layout_marginEnd="2sp"
            android:src="@drawable/banner1"
            android:scaleType="fitCenter"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/services_section"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/kitchenking"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:src="@drawable/kk_dash"
                android:layout_weight="1"
                android:elevation="8dp"/>
            <ImageView
                android:id="@+id/dustguard"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:src="@drawable/dg_dash"
                android:layout_weight="1"
                android:layout_marginStart="5sp"
                android:layout_marginEnd="5sp"
                android:elevation="8dp"/>
            <ImageView
                android:id="@+id/mrhygiene"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:src="@drawable/mh_dash"
                android:layout_weight="1"
                android:elevation="8dp"/>


        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/explore_section"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/package1"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/package1"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/package1"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/package1"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/package1"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"/>
            </LinearLayout>


        </HorizontalScrollView>




    </LinearLayout>

</ScrollView>